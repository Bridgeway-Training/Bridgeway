  <!-- JAVASCRIPT PESTAÑAS -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const buttons = document.querySelectorAll("[data-tab-button]");
      const panels = document.querySelectorAll("[data-tab-panel]");

      buttons.forEach((button) => {
        button.addEventListener("click", () => {
          const target = button.getAttribute("data-tab-button");

          // Actualizar aspecto de los botones
          buttons.forEach((b) => {
            b.classList.remove("bg-sky-500", "text-white", "shadow-md");
            b.classList.add("text-slate-200");
            b.setAttribute("aria-selected", "false");
          });
          button.classList.add("bg-sky-500", "text-white", "shadow-md");
          button.setAttribute("aria-selected", "true");

          // Mostrar panel correcto
          panels.forEach((panel) => {
            if (panel.getAttribute("data-tab-panel") === target) {
              panel.classList.remove("hidden");
            } else {
              panel.classList.add("hidden");
            }
          });

          // Desplazar un poco hacia arriba en móviles
          window.scrollTo({
            top: 0,
            behavior: "smooth",
          });
        });
      });
    });
  </script>
</body>
</html>
